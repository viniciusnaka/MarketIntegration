<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.viniciusnaka.market.MainActivity$PlaceholderFragment" >

    <Button
            android:id="@+id/btnProductList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products List"
            android:layout_below="@+id/btnCartList"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart List"
            android:id="@+id/btnCartList"
            android:layout_alignParentTop="true" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:id="@+id/btnShopping"
            android:layout_below="@+id/btnProductList" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users List"
            android:id="@+id/btnUserList" android:layout_below="@+id/btnShopping" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users Map"
            android:id="@+id/btnUsersMap"
            android:layout_below="@+id/btnUserList" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>


</RelativeLayout>
