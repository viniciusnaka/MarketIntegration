<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.viniciusnaka.market.CartActivity$PlaceholderFragment" >

    <TextView
            android:id="@+id/txtLabelCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Cart"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_alignRight="@+id/btnBuy"
            android:layout_alignEnd="@+id/btnBuy"/>

    <ListView
        android:id="@+id/listViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLabelCart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtValue">

    </ListView>

    <TextView
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_alignTop="@+id/txtQtde"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" android:text="Value"/>

    <TextView
        android:id="@+id/txtQtde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qtde"
        android:layout_alignTop="@+id/txtCurrency" android:layout_toLeftOf="@+id/txtCurrency"
        android:layout_marginRight="35dp" android:layout_alignParentBottom="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/btnBuy"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$"
            android:id="@+id/txtCurrency"
            android:layout_alignTop="@+id/btnBuy" android:layout_toLeftOf="@+id/txtValue"/>

</RelativeLayout>
