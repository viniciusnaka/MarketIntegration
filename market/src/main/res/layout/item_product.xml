<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

    <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

    <TextView
            android:id="@+id/txtNameProduct"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgProduct"
            android:gravity="center"
            android:text="Name"
            android:layout_alignBottom="@+id/imgProduct"
            android:layout_toLeftOf="@+id/txtQtdeProduct"
            android:layout_weight="0.12"/>

    <TextView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:text="Qtde"
            android:id="@+id/txtQtdeProduct"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtPriceProduct"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/txtPriceProduct"/>

    <TextView
            android:id="@+id/txtPriceProduct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="PreÃ§o"
            android:layout_alignBottom="@+id/imgEditProduct"
            android:layout_toLeftOf="@+id/imgEditProduct"
            android:layout_alignParentTop="true" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imgEditProduct"
                android:layout_alignBottom="@+id/txtNameProduct"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/edit"
                android:layout_marginLeft="15dp" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imgDeleteProduct"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/linearLayout2"
                android:layout_alignParentTop="true"
                android:src="@drawable/trashcan_delete2" />

    </LinearLayout>

</RelativeLayout>